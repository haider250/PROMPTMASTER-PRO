{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src", "frontend", "backend", "analytics", "statistics", "ml-models", "shared"],
  "references": [
    { "path": "./frontend" },
    { "path": "./backend" },
    { "path": "./analytics" },
    { "path": "./statistics" },
    { "path": "./ml-models" },
    { "path": "./shared" } // Correct shared workspace reference
  ]
}
